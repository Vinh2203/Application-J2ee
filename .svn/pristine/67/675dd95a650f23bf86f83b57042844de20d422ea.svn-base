
function modifier(){
	$("#zonePersonneDetail").hide();
	$("#zonePersonne_modifier").show();
}

function viewDetailTrip(i){
	var id = i;
	$("#date_"+id).show();
	 $("#hotel_"+id).show();
	 $("#ville_"+id).show();
	
	 $("#chambre_"+id).show();
	 $("#input_trip_view_"+i).hide();
	 $("#input_trip_hide_"+i).show();
}

function hideDetailTrip(i){
	var id = i;
	$("#date_"+id).hide();
	 $("#hotel_"+id).hide();
	 $("#ville_"+id).hide();
	
	 $("#chambre_"+id).hide();
	 $("#input_trip_hide_"+i).hide();
	 $("#input_trip_view_"+i).show();
	
}
